<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        xmlns:cp="http://schemas.android.com/apk/res/com.qx.rbf.activity"
    android:layout_width="fill_parent"
    android:id="@+id/main" 
    android:layout_height="fill_parent" >
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:id="@+id/goods_info_layout"
	    android:layout_height="@dimen/global_goods_shop_size"
	    android:orientation="vertical"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp"
	    >
	    <LinearLayout 
	        android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="horizontal"
	        >
		    <TextView 
				android:id="@+id/good_detail_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/black"
				android:textSize="30sp"
				android:text="红富士苹果"
			/>
		    <LinearLayout 
		        android:layout_width="fill_parent"
				android:layout_height="40sp"
				android:orientation="vertical"
				android:layout_marginRight="20dp"
				android:gravity="right"
		        >
		        
		        <!--  <TextView 
					android:id="@+id/good_detail_from_area"
					android:layout_width="wrap_content"
					android:layout_height="20sp"
					android:textColor="@color/black"
					android:text="产地: 烟台"
				/>-->
		        
		        <LinearLayout 
		            android:layout_width="wrap_content"
					android:layout_height="20sp"
					android:orientation="horizontal"
		            >
		            <TextView 
						android:layout_width="wrap_content"
						android:layout_height="fill_parent"
						android:textColor="@color/black"
						android:text="库存: "
					/>
		             <TextView 
						android:id="@+id/good_detail_left_number"
						android:layout_width="wrap_content"
						android:layout_height="fill_parent"
						android:textColor="#FF5D37"
						android:text="46"
					/>
		              <TextView 
						android:layout_width="wrap_content"
						android:layout_height="fill_parent"
						android:textColor="@color/black"
						android:text="斤"
					/>
		        </LinearLayout>
		    </LinearLayout>
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
			android:layout_height="50dp"
			android:layout_weight="1"
			android:orientation="horizontal"
	    >
		    <LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="@dimen/global_goods_shop_size"
			    android:layout_weight="2"
			    android:orientation="vertical"
		    >
	    		<TextView 
	    		    android:id="@+id/good_detail_origin_price"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="原售价   7 元/斤"
	    		    />
	    		<LinearLayout 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
		   		 >
		   		 	<TextView 
			            android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"
			        	android:text="抢鲜价 "
			            />
			        <TextView 
			            android:id="@+id/good_detail_qx_price"
			            android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"
			        	android:background="#00B294"
			        	android:textColor="@color/white"
			        	android:text=" 2.7"
			            />
			        <TextView 
			            android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"
			        	android:text=" 元/斤"
			            />
		   		 </LinearLayout>
	    </LinearLayout>
	    	<TextView 
			    android:id="@+id/good_detail_discount"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="3"
			    android:gravity="center"
				android:background="#FF5D37"
				android:textColor="@color/white"
				android:text="3.6折"
			 />
	    	<!--  <TextView 
			    android:id="@+id/good_detail_compare_price"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="3"
			    android:layout_marginLeft="5dp"
			    android:gravity="center"
				android:background="#D9D9D9"
				android:textColor="@color/white"
				android:text="比比价格"
			 />	-->	
	    </LinearLayout>
	   
	</LinearLayout>
	 <TextView 
	     	android:id="@+id/x1"
	        android:layout_width="fill_parent"
	        android:layout_height="2dp"
	        android:layout_below="@id/goods_info_layout"
	        android:background="@drawable/horizontal_line"
	        android:layout_marginTop="10dp"
	        />
	<!-- 商品图片 -->
	<LinearLayout 
	    android:id="@+id/galleryLinearLayout"
	    android:layout_width="fill_parent"
		android:layout_height="@dimen/global_goods_shop_size"
		android:layout_marginLeft="5dp"
		android:layout_marginTop="5dp"
		android:layout_marginRight="5dp"
		android:layout_below="@id/x1"
		android:orientation="vertical"
	    >
		<Gallery
		    android:id="@+id/good_detail_images_listview"
		    android:layout_width="fill_parent"
		    android:layout_height="@dimen/global_goods_shop_size"
			android:gravity="center_vertical"
       		android:spacing="15dp"
		    />
	</LinearLayout>
	<!-- 抢鲜时间 -->
	<TextView 
	    android:id="@+id/xxxxxxxx"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/galleryLinearLayout"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp"
	    android:textSize="15sp"
	    android:textColor="@color/black"
	    android:text="抢鲜时间："
	    />
	
	<TextView 
	    android:id="@+id/good_detail_qx_time"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/xxxxxxxx"
	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp"
	    android:text="2015年3月25日  17:00 —— 2015年3月26日 21:00"
	    />
	<TextView 
	    	android:id="@+id/xxx"
	        android:layout_width="fill_parent"
	        android:layout_height="2dp"
	        android:background="@drawable/horizontal_line"
	        android:layout_below="@id/good_detail_qx_time"
	        android:layout_marginTop="10dp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:layout_marginBottom="5dp"
	        />
	<TextView 
	    android:id="@+id/good_detail_belong_shop"
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:layout_below="@id/xxx"
	    android:layout_marginLeft="5dp"
	    android:background="@drawable/good_detail_belong_shop"
	    android:layout_marginRight="5dp"
	    android:gravity="center"
	    android:text="京客隆超市"
	    />
	<TextView 
	    android:id="@+id/good_detail_location"
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:layout_below="@id/good_detail_belong_shop"
	    android:layout_marginLeft="5dp"
	    android:layout_marginTop="2dp"
	    android:background="@drawable/good_detail_location"
	    android:layout_marginRight="5dp"
	    android:gravity="center"
	    android:text="回龙观风雅园三区南门北郊农场"
	    />
	<LinearLayout
	    android:id="@+id/good_detail_call_belong_shop_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:layout_below="@id/good_detail_location"
	    android:layout_marginLeft="5dp"
	    android:layout_marginTop="2dp"
	    android:background="@drawable/good_detail_call_belong_shop"
	    android:orientation="vertical"
	    android:layout_marginRight="5dp"
	    >
			<TextView
			    android:id="@+id/good_detail_call_belong_shop"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_horizontal"
			    android:gravity="center"
	    		android:text="010-53301981"
			    />
			<TextView
			    android:id="@+id/good_detail_call_phone_belong_shop"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_horizontal"
			    android:gravity="center"
	    		android:text="13718485367"
			    />
	</LinearLayout>
	<TextView 
	    android:id="@+id/good_detail_rate"
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:layout_below="@id/good_detail_call_belong_shop_layout"
	    android:layout_marginLeft="5dp"
	    android:layout_marginTop="2dp"
	    android:background="@drawable/good_detail_rate"
	    android:gravity="center"
	    android:text="商品评价"
	    android:layout_marginRight="5dp"
	    />
	<TextView 
	        android:layout_width="fill_parent"
	        android:layout_height="2dp"
	        android:background="@drawable/horizontal_line"
	        android:layout_below="@id/good_detail_rate"
	        android:layout_marginTop="10dp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:layout_marginBottom="5dp"
	        />
	<!-- 加入下部导航栏 -->
	<include 
	    layout="@layout/global_good_down"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    
	    />
</RelativeLayout>