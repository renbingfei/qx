<?xml version="1.0" encoding="utf-8"?><!-- 全局下部导航条 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_light_gray"
    android:paddingTop="10dp"
    android:orientation="horizontal" >
    <ImageView 
        android:id="@+id/three_big_type_goods"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/global_navigate_down_size"
        android:layout_weight="1"
        android:clickable="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/three_big_type_fruit"
        />
    <ImageView 
        android:id="@+id/three_big_type_shop"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/global_navigate_down_size"
        android:layout_weight="1"
        android:clickable="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/three_big_type_shop"
        />
    <ImageView 
        android:id="@+id/three_big_type_mine"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/global_navigate_down_size"
        android:layout_weight="1"
        android:clickable="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/three_big_type_mine"
        />

</LinearLayout>
